# Database
DATABASE_URL=postgresql://user:password@localhost:5432/penpal

# JWT
JWT_SECRET=your_jwt_secret

# Address Encryption (32-byte hex key)
ADDRESS_ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Development Mode (set to 'true' to use in-memory stubs instead of real API services)
USE_STUB_SERVICES=true

# AWS S3 (optional in development if USE_STUB_SERVICES=true)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=your_s3_bucket

# Firebase (currently unused - reserved for future features)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY=your_private_key
FIREBASE_CLIENT_EMAIL=your_client_email

# SendGrid (currently unused - reserved for future features)
SENDGRID_API_KEY=your_sendgrid_api_key

# Admin
ADMIN_EMAIL=admin@example.com

# Server
PORT=3000