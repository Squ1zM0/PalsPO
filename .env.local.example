# Database - For local development, you can use a local PostgreSQL instance
# For production/Vercel, use a cloud database like Neon or Supabase
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/penpal

# JWT Secret - Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_here

# Address Encryption Key - 64-character hex key
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ADDRESS_ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Development Mode - Set to 'true' to use in-memory stubs instead of real API services
# This allows development without AWS S3 credentials
USE_STUB_SERVICES=true

# AWS S3 Configuration (optional in development if USE_STUB_SERVICES=true)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=your_s3_bucket

# Optional: Firebase Configuration (currently unused - reserved for future features)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY=your_private_key
FIREBASE_CLIENT_EMAIL=your_client_email

# Optional: SendGrid Configuration (currently unused - reserved for future features)
SENDGRID_API_KEY=your_sendgrid_api_key

# Admin Configuration
ADMIN_EMAIL=admin@example.com

# Server Port
PORT=3000
